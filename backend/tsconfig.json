{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16", // Change module to node16 for consistency with moduleResolution
    "lib": ["es2021"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".", // Add baseUrl to resolve modules from the project root
    "paths": { // Add paths for absolute imports from src
      "@/services/*": ["src/services/*"],
      "@/services/ResponseHandler": ["src/services/ResponseHandler"],
      "@/utils/*": ["src/utils/*"]
    },
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
,
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
} 