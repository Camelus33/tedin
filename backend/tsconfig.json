{
  "compilerOptions": {
    "target": "es2017",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "lib": ["es2017", "dom"],
    "types": ["node", "jest"],
    "noImplicitThis": false,
    "strictNullChecks": false,
    "noEmitOnError": false,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/scripts/_deprecated_*.ts"]
} 