{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "noImplicitThis": false,
    "strictNullChecks": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/scripts/_deprecated_*.ts"]
} 