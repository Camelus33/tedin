@prefix : <https://w3id.org/habitus33/ontology/core/agent#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix bfo: <http://purl.obolibrary.org/obo/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .

@base <https://w3id.org/habitus33/ontology/core/agent> .

<https://w3id.org/habitus33/ontology/core/agent> rdf:type owl:Ontology ;
                                                   owl:versionIRI <https://w3id.org/habitus33/ontology/core/agent/1.0.0> ;
                                                   dcterms:title "Habitus33 Core Agent Ontology" ;
                                                   dcterms:description "A mid-level ontology defining agentive entities like users and groups within the Habitus33 ecosystem." ;
                                                   owl:imports foaf: .

#################################################################
#    Classes
#################################################################

###  https://w3id.org/habitus33/ontology/core/agent#User
:User rdf:type owl:Class ;
      rdfs:subClassOf foaf:Person ,
                      [ rdf:type owl:Restriction ;
                        owl:onProperty dcterms:creator ;
                        owl:someValuesFrom <https://w3id.org/habitus33/ontology/core/k-unit#KnowledgeUnit>
                      ] ;
      rdfs:label "User" ;
      rdfs:comment "A person who interacts with the Habitus33 system, creating and consuming knowledge resources." .

###  https://w3id.org/habitus33/ontology/core/agent#Team
:Team rdf:type owl:Class ;
      rdfs:subClassOf foaf:Group ;
      rdfs:label "Team" ;
      rdfs:comment "A group of users collaborating on a shared set of knowledge resources." . 