@prefix : <https://w3id.org/habitus33/ontology/core/k-resource#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix bibo: <http://purl.org/ontology/bibo/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

@base <https://w3id.org/habitus33/ontology/core/k-resource> .

<https://w3id.org/habitus33/ontology/core/k-resource> rdf:type owl:Ontology ;
                                                        owl:versionIRI <https://w3id.org/habitus33/ontology/core/k-resource/1.0.0> ;
                                                        dcterms:title "Habitus33 Core Knowledge Resource Ontology" ;
                                                        dcterms:description "A mid-level ontology for describing knowledge resources like books and articles." ;
                                                        owl:imports bibo: ,
                                                                    skos: .

#################################################################
#    Object Properties
#################################################################

###  https://w3id.org/habitus33/ontology/core/k-resource#coversConcept
:coversConcept rdf:type owl:ObjectProperty ;
               rdfs:domain :KnowledgeResource ;
               rdfs:range skos:Concept ;
               rdfs:label "covers concept" .

#################################################################
#    Classes
#################################################################

###  https://w3id.org/habitus33/ontology/core/k-resource#KnowledgeResource
:KnowledgeResource rdf:type owl:Class ;
                   rdfs:subClassOf dcterms:BibliographicResource ;
                   rdfs:label "Knowledge Resource" ;
                   rdfs:comment "An entity, such as a book or article, that serves as a source of knowledge." .

###  https://w3id.org/habitus33/ontology/core/k-resource#Book
:Book rdf:type owl:Class ;
      rdfs:subClassOf :KnowledgeResource ,
                      bibo:Book .

###  https://w3id.org/habitus33/ontology/core/k-resource#Article
:Article rdf:type owl:Class ;
         rdfs:subClassOf :KnowledgeResource ,
                         bibo:Article . 