@prefix : <https://w3id.org/habitus33/ontology/core/k-unit#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix k-resource: <https://w3id.org/habitus33/ontology/core/k-resource#> .

@base <https://w3id.org/habitus33/ontology/core/k-unit> .

<https://w3id.org/habitus33/ontology/core/k-unit> rdf:type owl:Ontology ;
                                                   owl:versionIRI <https://w3id.org/habitus33/ontology/core/k-unit/1.0.0> ;
                                                   dcterms:title "Habitus33 Core Knowledge Unit Ontology" ;
                                                   dcterms:description "A mid-level ontology for describing atomic units of knowledge, such as notes and highlights." ;
                                                   owl:imports <https://w3id.org/habitus33/ontology/core/k-resource> ,
                                                               skos: .

#################################################################
#    Object Properties
#################################################################

###  https://w3id.org/habitus33/ontology/core/k-unit#refersToResource
:refersToResource rdf:type owl:ObjectProperty ;
                  rdfs:domain :KnowledgeUnit ;
                  rdfs:range k-resource:KnowledgeResource ;
                  rdfs:label "refers to resource" .

#################################################################
#    Classes
#################################################################

###  https://w3id.org/habitus33/ontology/core/k-unit#KnowledgeUnit
:KnowledgeUnit rdf:type owl:Class ;
               rdfs:label "Knowledge Unit" ;
               rdfs:comment "An atomic piece of information created by a user, derived from a knowledge resource." .

###  https://w3id.org/habitus33/ontology/core/k-unit#Note
:Note rdf:type owl:Class ;
      rdfs:subClassOf :KnowledgeUnit .

###  https://w3id.org/habitus33/ontology/core/k-unit#Highlight
:Highlight rdf:type owl:Class ;
           rdfs:subClassOf :KnowledgeUnit .

###  https://w3id.org/habitus33/ontology/core/k-unit#SummaryNote
:SummaryNote rdf:type owl:Class ;
             rdfs:subClassOf :Note ;
             rdfs:comment "A note that summarizes multiple other knowledge units." . 