@prefix : <https://w3id.org/habitus33/ontology/app#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

@prefix core-agent: <https://w3id.org/habitus33/ontology/core/agent#> .
@prefix core-k-unit: <https://w3id.org/habitus33/ontology/core/k-unit#> .
@prefix core-k-resource: <https://w3id.org/habitus33/ontology/core/k-resource#> .

@base <https://w3id.org/habitus33/ontology/app> .

<https://w3id.org/habitus33/ontology/app> rdf:type owl:Ontology ;
    owl:versionIRI <https://w3id.org/habitus33/ontology/app/1.0.0> ;
    dcterms:title "Habitus33 Application Ontology" ;
    dcterms:description "A domain-specific ontology for the Habitus33 application, extending the core ontologies." ;
    owl:imports <https://w3id.org/habitus33/ontology/core/agent> ,
                <https://w3id.org/habitus33/ontology/core/k-unit> ,
                <https://w3id.org/habitus33/ontology/core/k-resource> .

#################################################################
#    Object Properties
#################################################################

:hasReadingSession rdf:type owl:ObjectProperty ;
  rdfs:domain core-agent:User ;
  rdfs:range :ReadingSession ;
  rdfs:label "has reading session" .

:evolvedFrom rdf:type owl:ObjectProperty ;
  rdfs:subPropertyOf dcterms:relation ;
  rdfs:domain core-k-unit:Note ;
  rdfs:range core-k-unit:Note ;
  rdfs:label "evolved from" .

:linksTo rdf:type owl:ObjectProperty ;
    rdfs:subPropertyOf dcterms:relation ;
    rdfs:label "links to" .

:contradicts rdf:type owl:ObjectProperty ;
    rdfs:subPropertyOf :linksTo ;
    rdfs:label "contradicts" .
    
#################################################################
#    Data Properties
#################################################################

:readingSpeed rdf:type owl:DatatypeProperty ;
  rdfs:domain :ReadingSession ;
  rdfs:range xsd:float ;
  rdfs:label "reading speed (pages/min)" .

:highlightColor rdf:type owl:DatatypeProperty ;
  rdfs:domain core-k-unit:Highlight ;
  rdfs:range xsd:string ;
  rdfs:label "highlight color" .

#################################################################
#    Classes
#################################################################

### Application-specific Classes
:ReadingSession rdf:type owl:Class ;
    rdfs:label "Reading Session" .

:PDFBook rdf:type owl:Class ;
    rdfs:subClassOf core-k-resource:Book .

:PDFMemo rdf:type owl:Class ;
    rdfs:subClassOf core-k-unit:Note .

:InlineMemo rdf:type owl:Class ;
    rdfs:subClassOf core-k-unit:Note .

:MemoEvolution rdf:type owl:Class ;
    rdfs:subClassOf core-k-unit:KnowledgeUnit ;
    rdfs:comment "A complex knowledge unit that represents the evolution of multiple thoughts and notes." .

:Flashcard rdf:type owl:Class ;
    rdfs:subClassOf core-k-unit:KnowledgeUnit . 